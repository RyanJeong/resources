<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.doorlockclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        name="com.example.user.doorlockclient.SetTypekit"
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name="com.example.user.doorlockclient.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.user.doorlockclient.AgreementPattern"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.user.doorlockclient.CheckConnection"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.user.doorlockclient.InsertPassword"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.user.doorlockclient.InsertPattern"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.user.doorlockclient.ResetPassword"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.user.doorlockclient.ResetPattern"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.user.doorlockclient.ShowLog"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.user.doorlockclient.WaitPerson"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>