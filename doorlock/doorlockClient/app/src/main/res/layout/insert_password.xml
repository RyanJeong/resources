<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/root"
    tools:context=".InsertPassword"
    tools:ignore="missingPrefix" >

    <LinearLayout
        style="@style/title_bar"
        android:layout_weight="1">

        <View
            style="@style/view_horizontal"
            android:layout_weight="1"/>
        <ImageView
            style="@style/title_bar_icon"
            android:id="@+id/title_bar_icon"/>
        <View
            style="@style/view_horizontal"
            android:layout_weight="1"/>
        <TextView
            style="@style/title_bar_title"
            android:id="@+id/title_bar"
            app:font="custom1" />
        <View
            style="@style/view_horizontal"
            android:layout_weight="16"/>

    </LinearLayout>

    <LinearLayout
        style="@style/linear_layout_vertical"
        android:layout_weight="8">

        <LinearLayout
            style="@style/linear_layout_vertical"
            android:layout_weight="2">

            <LinearLayout
                style="@style/linear_layout_vertical"
                android:layout_weight="1">

                <LinearLayout
                    style="@style/linear_layout_horizontal"
                    android:layout_weight="1">

                    <View
                        style="@style/view_horizontal"
                        android:layout_weight="4"/>
                    <ImageView
                        style="@style/image"
                        android:src="@drawable/password"
                        android:layout_weight="1"/>
                    <View
                        style="@style/view_horizontal"
                        android:layout_weight="4"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/linear_layout_horizontal"
                    android:layout_weight="1">

                    <TextView
                        style="@style/text"
                        android:id="@+id/text"
                        android:text="@string/insert_password"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/linear_layout_horizontal"
                android:layout_weight="1">

                <View
                    style="@style/view_horizontal"
                    android:layout_weight="8"/>
                <TextView
                    style="@style/input_code"
                    android:id="@+id/input_code_1"
                    android:layout_weight="8" />
                <View
                    style="@style/view_horizontal"
                    android:layout_weight="1"/>
                <TextView
                    style="@style/input_code"
                    android:id="@+id/input_code_2"
                    android:layout_weight="8" />
                <View
                    style="@style/view_horizontal"
                    android:layout_weight="1"/>
                <TextView
                    style="@style/input_code"
                    android:id="@+id/input_code_3"
                    android:layout_weight="8" />
                <View
                    style="@style/view_horizontal"
                    android:layout_weight="1"/>
                <TextView
                    style="@style/input_code"
                    android:id="@+id/input_code_4"
                    android:layout_weight="8" />
                <View
                    style="@style/view_horizontal"
                    android:layout_weight="8"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/linear_layout_horizontal"
            android:layout_weight="1">

            <View
                style="@style/view_horizontal"
                android:layout_weight="1"/>
            <LinearLayout
                style="@style/table"
                android:layout_weight="3">

                <LinearLayout
                    style="@style/linear_layout_horizontal"
                    android:layout_weight="1">

                    <Button
                        style="@style/button"
                        android:id="@+id/digit_0"
                        android:text="@string/digit_0"/>
                    <Button
                        style="@style/button"
                        android:id="@+id/digit_1"
                        android:text="@string/digit_1"/>
                    <Button
                        style="@style/button"
                        android:id="@+id/digit_2"
                        android:text="@string/digit_2"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/linear_layout_horizontal"
                    android:layout_weight="1">

                    <Button
                        style="@style/button"
                        android:id="@+id/digit_5"
                        android:text="@string/digit_5"/>
                    <Button
                        style="@style/button"
                        android:id="@+id/digit_6"
                        android:text="@string/digit_6"/>
                    <Button
                        style="@style/button"
                        android:id="@+id/digit_7"
                        android:text="@string/digit_7"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/table"
                android:layout_weight="3">

                <LinearLayout
                    style="@style/linear_layout_horizontal"
                    android:layout_weight="1">

                    <Button
                        style="@style/button"
                        android:id="@+id/digit_3"
                        android:text="@string/digit_3"/>
                    <Button
                        style="@style/button"
                        android:id="@+id/digit_4"
                        android:text="@string/digit_4"/>
                    <ImageButton
                        style="@style/image_button"
                        android:id="@+id/del"
                        android:src="@drawable/backspace" />

                </LinearLayout>

                <LinearLayout
                    style="@style/linear_layout_horizontal"
                    android:layout_weight="1">

                    <Button
                        style="@style/button"
                        android:id="@+id/digit_8"
                        android:text="@string/digit_8"/>
                    <Button
                        style="@style/button"
                        android:id="@+id/digit_9"
                        android:text="@string/digit_9"/>
                    <ImageButton
                        style="@style/image_button"
                        android:id="@+id/back"
                        android:src="@drawable/back"/>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/view_horizontal"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/linear_layout_horizontal"
        android:layout_weight="1">

        <View
            style="@style/view_horizontal"
            android:layout_weight="1"/>
        <ImageView
            style="@style/logo_01"
            android:id="@+id/logo_01"
            android:layout_weight="12"/>
        <View
            style="@style/view_horizontal"
            android:layout_weight="32"/>
        <ImageView
            style="@style/logo_02"
            android:id="@+id/logo_02"
            android:layout_weight="6"/>
        <View
            style="@style/view_horizontal"
            android:layout_weight="2"/>

    </LinearLayout>

</LinearLayout>
