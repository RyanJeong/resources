<resources>
    <style name="root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="linear_layout_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0sp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="linear_layout_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0sp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="view_horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="view_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0sp</item>
    </style>
    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0sp</item>
        <item name="android:background">@color/base</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="title_bar_icon">
        <item name="android:layout_width">48sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/title_bar_icon</item>
        <item name="android:contentDescription">@string/img_error</item>
    </style>
    <style name="title_bar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/title_bar</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="logo_01">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/logo_01</item>
        <item name="android:contentDescription">@string/img_error</item>
    </style>
    <style name="logo_02">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/logo_02</item>
        <item name="android:contentDescription">@string/img_error</item>
    </style>
    <style name="image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:contentDescription">@string/img_error</item>
    </style>
    <style name="text">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="subText">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="input_code">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/value</item>
        <item name="android:textColor">@color/waitValue</item>
        <item name="android:textSize">128sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="table">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">48sp</item>
    </style>
    <style name="image_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">24sp</item>
    </style>
    <style name="log">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@color/log</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
